{% if attributes.toArray() is not empty %}
<div{{ attributes.addClass('hero__section') }}>
  {% endif %}
  {{ title_prefix }}
  {{ title_suffix }}
  {% block content %}
    <div class="hero__top">
      <div class="hero__image-slider">
        {{ content.field_hero_images }}
      </div>
      <div class="hero__message-wrap">
        <div class="hero__title">
          <h2>{{ content.field_title }}</h2>
        </div>
        <div class="hero__message">

          {{ content.field_share }}
        </div>
      </div>
      <div class="hero__arrow">
        <a href="#" class="arrow"></a>
      </div>
    </div>
    <div class="hero__bottom">
      <h2 class="subhero__title">{{ content.field_subtitle }}</h2>
      <div class="subhero__message">
        {{ content.field_teaser }}
      </div>
      <div class="subhero__link">
        {{ content.field_learn_more }}
      </div>
    </div>
  {% endblock %}
  {% if attributes.toArray() is not empty %}
</div>
{% endif %}