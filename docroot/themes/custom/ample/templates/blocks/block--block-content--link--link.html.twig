{% set is_public = 1 %}
{% if not logged_in and is_non_public %}
  {% set is_public = 0 %}
{% endif %}
{% if is_public != 0 %}
<div{{ attributes }}>
  <div class="bottom-link">
    {{ title_prefix }}
    <a href="{{ content.field_link[0]['#url'] }}" class="red-btn-link">
      {{ content.field_link[0]['#title'] }}
    </a>
    {{ title_suffix }}
  </div>
</div>
{% endif %}
