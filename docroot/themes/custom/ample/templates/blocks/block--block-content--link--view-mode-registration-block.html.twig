{% set is_public = 1 %}
{% if not logged_in and is_non_public %}
  {% set is_public = 0 %}
{% endif %}
{% if is_public != 0 %}
<div class="teaser corners">
  <div{{ attributes }}>
    {{ title_prefix }}
    <a href="{{ content.field_link[0]['#url'] }}">
      <h2 role="heading">
        {{ content.field_link[0]['#title'] }}
      </h2>

      {% if content.field_link_description|field_value %}
        <p>
          {{ content.field_link_description|field_value }}
        </p>
      {% endif %}
    </a>
    {{ title_suffix }}
  </div>
</div>
{% endif %}
