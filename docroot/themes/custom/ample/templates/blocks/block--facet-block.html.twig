{% if attributes.toArray() is not empty %}
<div{{ attributes.addClass('block-facet') }}>
  {% endif %}
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes }}>{{ label|t }}</h2>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    <div class="facet-items">
      {{ content }}
    </div>
  {% endblock %}
  {% if attributes.toArray() is not empty %}
</div>
{% endif %}
