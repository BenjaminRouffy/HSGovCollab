<div class="timeline" data-anchor-id="time-line-{{ item['#field_collection_item'].id }}" id="time-line-{{ item['#field_collection_item'].id }}">
  <h2 class="anchor-title" role="heading">
    {{ content.field_title }}
  </h2>

  <div class="red-line"></div>

  <div class="timeline-wrapper">
    {% if content.field_headline|field_value %}
      <h2 role="heading">
        {{ content.field_headline|field_value }}
      </h2>
    {% endif %}

    <div class="timeline-item">
      {{ content.field_time_line_item|field_value }}
    </div>
  </div>

</div>
