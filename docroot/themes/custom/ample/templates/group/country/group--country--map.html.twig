<div class="marker-info" id="country_{{ group.id() }}">
  <div class="close-btn"></div>
  <h2 role="heading" class="country-title">
    <a  href="{{ path('entity.group.canonical', {'group': group.id()}) }}" >{{ label }}</a>
  </h2>

  {% if content.field_country_options|field_value %}
    <div class="country-options">
      {{ content.field_country_options|field_value }}
    </div>
  {% endif %}

  {% if content.field_infographic|field_value %}
    <div class="country-infographic">
      {{ content.field_infographic|field_value }}
    </div>
  {% endif %}

  <div class="bottom-link">
    <a href="{{ path('entity.group.canonical', {'group': group.id()}) }}" role="link" class="read-more">
      {{ 'Go to country page'|t }}
    </a>
  </div>
</div>
