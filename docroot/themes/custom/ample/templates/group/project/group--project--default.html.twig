<div{{ attributes.addClass(group.bundle() ~ '-group') }}>
  <div class="project-icon">
    {% if (content.field_project_icon['0']) %}
      {{ content.field_project_icon }}
    {% else %}
      <img src="{{ site_base_url }}/themes/custom/ample/images/project-icon.svg" alt="project logo">
    {% endif %}
  </div>
  {{ title_prefix }}
  <div class="title-wrapper">
    <h1 role="heading">
      {{ label }}
    </h1>
    <div>{{ content.field_date }}</div>
    <div>{{ content.field_end_date }}</div>

    <div class="line"></div>
  </div>
  {{ title_suffix }}

  {% if logged_in %}
    {{ following_form }}
  {% endif %}

  <div class="summary-text">
    {{ content.field_summary }}
  </div>

  <div class="more-content-wrapper">
    <div class="read-more show-more">{{ 'Read more'|t }}</div>
    <div class="more-content">
      {{ content.field_content|field_value }}
    </div>
  </div>
</div>
