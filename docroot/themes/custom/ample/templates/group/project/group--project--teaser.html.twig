<div class="project-content">
  <div{{ attributes }}>
    {{ title_prefix }}
    <div class="project-title">
      <div class="project-icon-wrapper">
        {{ content.field_project_icon }}
      </div>
      <h3 role="heading">
        {{ label }}
      </h3>
      <div class="summary">
        {% if not logged_in %}
          {{ content.field_summary_public }}
        {% else %}
          {{ content.field_summary }}
        {% endif %}
      </div>
    </div>
    {{ title_suffix }}
  </div>
  {% if not logged_in %}
    <div class="bottom-link">
      {# TODO Should use here a router.#}
      {{ link('Signup to know more'|t, 'base:user/sign-up', { 'class':[ 'read-more' ] }) }}
    </div>
  {% else %}
    {{ drupal_view('last_news_by_group', 'embed_1', group.id.value) }}
    <a href="{{ url }}" class="project-link"></a>
  {% endif %}
</div>
