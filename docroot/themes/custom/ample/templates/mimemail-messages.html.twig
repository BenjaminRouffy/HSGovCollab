<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    {% if css %}
      {{ css }}
    {% endif %}

    <style>
      body {
        margin:0;
      }

      a {
        color: #416170;
      }

      ul,
      ol {
        padding-left: 20px;
      }

      @media only screen and (min-width: 600px) {
        .wrapper {
          width:600px !important;
        }
      }

      @media only screen and (max-width: 480px) {
        .two-column-wrapper td {
          display: block;
          width: 100%;
        }

        .two-column-wrapper table,
        .two-column-wrapper td,
        .two-column-item,
        .banner-wrapper {
          padding-left: 0 !important;
          padding-right: 0 !important;
        }
      }
    </style>
  </head>
  <body style="font-size: 14px; color: #416170; line-height: 1.4; margin: 0; padding: 0; -webkit-text-size-adjust: 100%; word-wrap: break-word;" id="mimemail-body" class="test" {% if ( module | length > 0 ) and ( key | length > 0 ) %}  {% set class = 'class="' ~ module ~ '-' ~ key ~ '"' %} {% endif %} >
    <table class="wrapper" align="center" width="100%" style="font-size: 14px; font-family: Arial, sans-serif; line-height: 20px; border-collapse: collapse; table-layout: fixed; max-width: 600px; min-width: 320px; background-color: #e9ecee;" cellpadding="0" cellspacing="0" role="presentation">
      <tr>
        <td>
          <table width="100%" style="font-size: 12px; line-height: 1.4; color: #416170; padding: 20px 10px;" class="table5">
            <tr>
              <td>
                <a href="https://cibox07.m2.propeople.com.ua/stage/" style="width: 200px; display: block; margin: 0 auto;">
                  <img src="https://cibox07.m2.propeople.com.ua/stage/themes/custom/ample/images/P4H_logo.7.svg" alt="Logo">
                </a>
              </td>
            </tr>
          </table>
        </td>
      </tr>

      <tr>
        <td>
          <table width="100%" style="font-size: 14px; line-height: 1.4; padding: 10px;" cellspacing="0" cellpadding="0">
            <tr>
              <td>
                {{ body|raw }}
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
