<table width="100%" cellspacing="0" cellpadding="0">
  <tr>
    <td {{ attributes }} align="center">
      {% if content.field_image|field_value %}
        <div class="newsletter-large-image" style="margin-bottom: 10px;">
          <img src="{{ content.field_image|field_value|render|striptags|trim }}" alt="Image" style="max-width: 100%; margin-bottom: 10px;">
        <div class="newsletter-bg" style="font-size: 14px; background: #ea3a32; color: #ffffff; margin-top: 0; margin-bottom: 20px; overflow: hidden; padding: 40px 20px;">
      {% endif %}
          {{ content.body }}
        </div>
      </div>
    </td>
  </tr>
</table>

{% if content.childs|length %}
  <table width="100%" cellspacing="0" cellpadding="0">
    {% for row in content.childs|batch(2, ' ') %}
      <tr>
        {% for subentity in row %}
          <td style="vertical-align: top;">{{ subentity }}</td>
        {% endfor %}
      </tr>
    {% endfor %}
  </table>
{% endif %}

