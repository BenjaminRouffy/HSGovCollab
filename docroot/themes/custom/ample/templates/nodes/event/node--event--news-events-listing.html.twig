{% set isConf = is_conference ? 'event-conference' : '' %}

<div{{ attributes.addClass('item').addClass('event') }}>
  {% if contextual_link_access %}
    {{ title_suffix.contextual_links|render }}
  {% endif %}
  <div class="event-container {{ isConf }}">

    <a href="{{ url }}" rel="bookmark">
      {% if content.field_image %}
        {{ content.field_image|field_value }}
      {% endif %}

      <div class="post-info">
        {% if content.field_date['#period'] %}
          {{ content.field_date['#period'] }}
        {% endif %}
      </div>

      <h2>{{ label }}</h2>
    </a>
  </div>
</div>
