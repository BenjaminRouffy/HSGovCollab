<div class="banner-image-wrapper">
  <div class="country-icon-wrapper">
    {% if content.field_country_icon|field_value %}
      {{ content.field_country_icon|field_value }}
    {% else %}
      <img src="/{{ base_path ~ directory }}/images/default_country_icon.png">
    {% endif %}

    <h1 role="heading">
      {{ group_label }}
    </h1>
  </div>

  <div class="banner-image" style="background-image: url({{ file_url(content.field_content_image|render|striptags|trim) }})">
    {% if content.field_description|field_value %}
      <p class="image-text">
        {{ content.field_description|field_value }}
      </p>
    {% endif %}
  </div>
</div>
