<div class="banner-image-wrapper">
  <div class="country-content-wrapper">
    {{ country_icon }}

    <h1 role="heading">
      {{ group_label|t|upper }}
    </h1>

    {% if logged_in %}
      <div class="follow-link">
        {{ 'Follow @country'|t({'@country': group_label|t}) }}
      </div>
    {% endif %}
  </div>

  <div class="banner-image" style="background-image: url({{ file_url(content.field_content_image|render|striptags|trim) }})">
    {% if content.field_description|field_value %}
      <div class="country-desc">
        <p class="image-text">
          {{ content.field_description|field_value }}
        </p>
      </div>
    {% endif %}
  </div>
</div>
