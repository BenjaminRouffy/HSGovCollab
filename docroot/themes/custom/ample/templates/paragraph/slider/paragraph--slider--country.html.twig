<div class="slider-wrapper country-slider">
  {% for key, item in content.field_slider %}
    {% if key|first != '#'  %}
      <div class="slider-item-wrapper{{ key == 0 ? ' first-slide' : '' }}">
        {% if key == 0 %}
          <div class="country-icon-wrapper">
            <img src="{{ country_icon }}">

            <h1 role="heading">
              {{ group_label|upper }}
            </h1>

            {% if logged_in %}
              <span class="follow-link">
                {{ 'Follow @country'|t({'@country': group_label}) }}
              </span>
            {% endif %}
          </div>
        {% endif %}

        {{ item }}
      </div>
    {% endif %}
  {% endfor %}
</div>
