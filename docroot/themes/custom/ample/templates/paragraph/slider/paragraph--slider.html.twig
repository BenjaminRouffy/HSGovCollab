{% if view_mode == 'view_mode_thumbnail' %}
  <div class="slider-main">

    <div class="content-slider-wrapper">
      {{ content.field_slider.0 }}
    </div>

    {% if content.field_slider.1 is not empty %}
      <div class="thumb-slider-wrapper">
        {{ content.field_slider.1 }}
      </div>
    {% endif %}
  </div>
{% else %}
  <div class="slider-wrapper background-image">
    {{ content.field_slider }}
  </div>
{% endif %}

