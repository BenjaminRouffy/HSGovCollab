{% set user_link = path('entity.user.canonical', {'user': user.id()}) %}
<div{{ attributes.addClass('contact-item') }}>
  <a href="{{ user_link }}" class="contact-link"></a>

  <div class="contact-content">
    <div class="user-wrapper">
      {% if content.field_avatar %}
        <div class="user-icon">
          {{ content.field_avatar }}
        </div>
      {% endif %}

      <div class="user-name">
        {% if content.field_first_name|field_value %}
          {{ content.field_first_name|field_value }}
        {% endif %}

        {% if content.field_last_name|field_value %}
          {{ content.field_last_name|field_value }}
        {% endif %}
      </div>
    </div>
    <div class="compact-view-main">

      <div class="font-social-icon organization-icon">
        {% if elements['#organization'] is not empty %}
          <span>
          {{ elements['#organization'] }},
        </span>
        {% else %}
          <span>
          {{ content.field_organisation|field_value }},
        </span>
        {% endif %}
        <span>
        {{ content.field_job_title|field_value }}
      </span>
      </div>


      {% if content.field_organisations|field_value %}
        {{ content.field_organisations }}
      {% endif %}

      <div class="compact-view">
        {% if content.field_country|field_value %}
          <div class="font-social-icon country-icon">
            <span>
              {{ content.field_country|field_value }}
            </span>
          </div>
        {% endif %}

        {{ content.computed_group_membership }}

        {% if content.field_skype_or_other|field_value %}
          {{ content.field_skype_or_other|field_value }}
        {% endif %}

        {% if content.field_telephone|field_value %}
          {{ content.field_telephone }}
        {% endif %}

        {% if content.field_mobilephone|field_value %}
          {{ content.field_mobilephone }}
        {% endif %}

        <span class="contact-expand">Click to expand</span>
      </div>
    </div>
    <div class="contact-items">
    {#
      <div class="contact-to-user">
        {{ content.relation_form }}
      </div>
      #}

      {% if elements['#current_user'] != user.id() %}
        <div class="contact-to-user">
          <a href="{{ user_link ~ '/contact' }}" target="_blank" class="red-btn-link">
            {{ 'Contact through the Collaborative via email'|t }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>
