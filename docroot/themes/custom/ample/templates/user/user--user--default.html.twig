<div{{ attributes.addClass(['contact-list', 'single-contact']) }}>
  <div class="contact-item">
    <div class="contact-content">
      {% if content.field_avatar %}
        <div class="user-icon-wrapper">
          <div class="user-icon">
            {{ content.field_avatar }}
          </div>
        </div>
      {% endif %}

      <div class="user-contacts">
        {% if elements['#user_mail'] is not empty %}
          <div class="font-social-icon mail-icon">
            <span>
              {{ elements['#user_mail'] }}
            </span>
          </div>
        {% endif %}

        {% if content.field_country_manager|field_value %}
          {{ content.field_country_manager }}
        {% endif %}

        {% if content.field_project_manager|field_value %}
          {{ content.field_project_manager }}
        {% endif %}

        {% if content.field_knowledge_vault_manager|field_value %}
          {{ content.field_knowledge_vault_manager }}
        {% endif %}

        {% if content.field_product_manager|field_value %}
          {{ content.field_product_manager }}
        {% endif %}

        {% if content.field_skype_or_other|field_value %}
          {{ content.field_skype_or_other|field_value }}
        {% endif %}

        {% if content.field_telephone|field_value %}
          {{ content.field_telephone }}
        {% endif %}

        {% if content.field_mobilephone|field_value %}
          {{ content.field_mobilephone }}
        {% endif %}

        <div class="font-social-icon organization-icon">
          {% if elements['#organization'] is not empty %}
            <span>
              {{ elements['#organization'] }},
            </span>
          {% else %}
            <span>
              {{ content.field_organisation|field_value }},
            </span>
          {% endif %}

          <span>
            {{ content.field_job_title|field_value }}
          </span>
        </div>

        {% if content.field_organisations|field_value %}
          {{ content.field_organisations }}
        {% endif %}

        {% if content.field_country|field_value %}
          <div class="font-social-icon country-icon">
            <span>
              {{ content.field_country|field_value }}
            </span>
          </div>
        {% endif %}

        {{ content.relation_form }}

        {% if elements['#current_user'] != user.id() %}
          <div class="contact-to-user">
            <a href="{{ path('entity.user.canonical', {'user': user.id()}) }}/contact" target="_blank" class="red-btn-link">
              {{ 'Contact through P4H Network via email'|t }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
